{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
